[user]
	name = tmwatchanan
	email = tmwatchanan@users.noreply.github.com
	signingkey = F4D43507B7A7F4AC
[includeIf "gitdir:~/dev/"]
	path = ~/dev/.gitconfig
[includeIf "gitdir:~/tm/"]
	path = ~/tm/.gitconfig
[include]
	path = ~/.config/delta/themes.gitconfig
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
	pager = delta --paging=never
[alias]
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -

; Diff Tool -------------------------------------------------------------------
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false
[difftool]
	prompt = false
[diff]
    colorMoved = default
    tool = nvimdiff
[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
[delta]
	navigate = true
	features = kanagawa
    line-numbers = true
    file-decoration-style = ul
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
    hunk-header-style = omit
[delta "kanagawa"]
    dark = true
    syntax-theme = kanagawa ; from tmTheme (bat, delta, lazygit)
    file-style = yellow bold

; Merge Tool ------------------------------------------------------------------
[merge]
    conflictstyle = diff3
    tool = nvimmerge
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "nvimmerge"]
	; cmd = nvim -d $MERGED $REMOTE $LOCAL -c 'wincmd J | norm ]c'
	cmd = nvim -d $MERGED -c ':DiffviewOpen'

; Credential ------------------------------------------------------------------
[credential "https://git.linecorp.com"]
	provider = github
[credential "https://git.wndv.co"]
	provider = gitlab
	gitLabAuthModes = browser
[url "ssh://git@git.wndv.co/"]
	; for private go module
    insteadOf = https://git.wndv.co/
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
	gitLabAuthModes = browser
	credentialStore = cache
	guiPrompt = false
	gitHubAuthModes = browser
[filter "gitignore"]
	clean = "sed '/;gitignore$/d'"

[commit]
	gpgsign = true
